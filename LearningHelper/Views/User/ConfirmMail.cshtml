@model LearningHelper.Models.SendOTPMail

@{
    ViewBag.Title = "ConfirmMail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section title
{
    <title>Confirm mail</title>
}

<h2 style="text-align: center;">ConfirmMail</h2>


@using (Html.BeginForm("ConfirmMail", "User", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.OTPCode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OTPCode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OTPCode, "", new { @class = "text-danger" })

                @ViewBag.Result
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Confirm" class="btn btn-dark" />
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
